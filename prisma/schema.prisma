// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // When running `prisma migrate` locally or in CI, Prisma creates a shadow
  // database to safely run migrations. With Neon you should point this to
  // a writable database (often a separate Neon branch) using an env var:
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Certificate {
  id          String              @id @default(cuid())
  title       String
  issuer      String
  date        String
  description String
  skills      String[] // Array of skill tags
  /// Certificate level (entry/intermediate/advanced). Optional so existing rows aren't affected.
  level       CertificationLevel?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([createdAt(sort: Desc)])
  @@index([level])
  @@map("certificates")
}

model Project {
  id           String   @id @default(cuid())
  title        String
  description  String
  category     String // "Software Engineering", "AI/ML", "Others"
  technologies String[] // Array of tech tags
  githubLink   String?
  liveLink     String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([createdAt(sort: Desc)])
  @@index([category])
  @@map("projects")
}

model Skill {
  id        String   @id @default(cuid())
  name      String   @unique
  category  String // "Languages", "Frameworks", "Tools", "Concepts"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@map("skills")
}

enum CertificationLevel {
  ENTRY
  INTERMEDIATE
  ADVANCED
}

model Badge {
  id        String   @id @default(cuid())
  title     String
  issuer    String
  date      String
  badgeUrl  String?  // link to Credly badge or embed URL
  imageUrl  String?
  skills    String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt(sort: Desc)])
  @@map("badges")
}

model Testimonial {
  id            String   @id @default(cuid())
  clientName    String
  clientRole    String?
  clientCompany String?
  testimonial   String
  date          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([createdAt(sort: Desc)])
  @@map("testimonials")
}
