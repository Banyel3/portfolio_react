// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // When running `prisma migrate` locally or in CI, Prisma creates a shadow
  // database to safely run migrations. With Neon you should point this to
  // a writable database (often a separate Neon branch) using an env var:
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  issuer      String
  date        String
  description String
  skills      String[] // Array of skill tags
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("certificates")
}

model Project {
  id           String   @id @default(cuid())
  title        String
  description  String
  category     String   // "Cybersecurity", "Software Engineering", "AI/ML"
  technologies String[] // Array of tech tags
  githubLink   String?
  liveLink     String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

model Skill {
  id        String   @id @default(cuid())
  name      String   @unique
  category  String   // "Languages", "Frameworks", "Tools", "Concepts"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}
